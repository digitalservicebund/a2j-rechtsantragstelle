{
  "id": "persoenliche-daten",
  "initial": "start",
  "states": {
    "start": {
      "on": {
        "SUBMIT": "person"
      }
    },
    "person": {
      "id": "person",
      "initial": "forderung-mehrere-personen",
      "states": {
        "forderung-mehrere-personen": {
          "on": {
            "SUBMIT": "daten",
            "BACK": "#flugdaten.anzahl"
          }
        },
        "daten": {
          "on": {
            "SUBMIT": [
              {
                "guard": "isUnter18JahreAlt",
                "target": "vertretung-minderjaehrige"
              },
              "prozessbevollmaechtigte-angeben"
            ],
            "BACK": "forderung-mehrere-personen"
          }
        },
        "vertretung-minderjaehrige": {
          "on": {
            "SUBMIT": "prozessbevollmaechtigte-angeben",
            "BACK": "daten"
          }
        },
        "prozessbevollmaechtigte-angeben": {
          "on": {
            "SUBMIT": [
              {
                "guard": "isProzessbevollmaechtigteYes",
                "target": "prozessbevollmaechtigte-daten"
              },
              "#forderung"
            ],
            "BACK": [
              {
                "guard": "isUnter18JahreAlt",
                "target": "vertretung-minderjaehrige"
              },
              "daten"
            ]
          }
        },
        "prozessbevollmaechtigte-daten": {
          "on": {
            "SUBMIT": "#forderung",
            "BACK": "prozessbevollmaechtigte-angeben"
          }
        }
      }
    }
  }
}
