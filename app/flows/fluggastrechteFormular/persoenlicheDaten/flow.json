{
  "id": "persoenliche-daten",
  "initial": "start",
  "states": {
    "start": {
      "on": {
        "SUBMIT": "person"
      }
    },
    "person": {
      "id": "person",
      "initial": "daten",
      "states": {
        "daten": {
          "on": {
            "SUBMIT": [
              {
                "guard": "isUnter18JahreAlt",
                "target": "vertretung-minderjaehrige"
              },
              "#weitere-personen.frage"
            ],
            "BACK": "#flugdaten.zusaetzliche-angaben"
          }
        },
        "vertretung-minderjaehrige": {
          "on": {
            "SUBMIT": "#weitere-personen.frage",
            "BACK": "daten"
          }
        }
      }
    },
    "weitere-personen": {
      "id": "weitere-personen",
      "initial": "frage",
      "states": {
        "frage": {
          "on": {
            "SUBMIT": [
              {
                "guard": "isWeiterePersonenYes",
                "target": "uebersicht"
              },
              "#zusammenfassung.start"
            ],
            "BACK": [
              {
                "guard": "isUnter18JahreAlt",
                "target": "#person.vertretung-minderjaehrige"
              },
              "#person.daten"
            ]
          }
        },
        "uebersicht": {
          "on": {
            "BACK": "frage",
            "SUBMIT": "#zusammenfassung.start",
            "add-weiterePersonen": {
              "guard": "isValidWeiterePersonenArrayIndex",
              "target": "person"
            }
          }
        },
        "person": {
          "initial": "daten",
          "states": {
            "daten": {
              "on": {
                "BACK": "#weitere-personen.uebersicht",
                "SUBMIT": [
                  {
                    "guard": "isWeiterePersonensUnter18JahreAlt",
                    "target": "vertretung-minderjaehrige"
                  },
                  "#weitere-personen.uebersicht"
                ]
              }
            },
            "vertretung-minderjaehrige": {
              "on": {
                "BACK": "daten",
                "SUBMIT": "#weitere-personen.uebersicht"
              }
            }
          }
        }
      }
    }
  }
}
